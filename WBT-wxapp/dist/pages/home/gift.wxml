<view class="bg">
  <view class="top_tip">
    <view wx:for="{{lists}}">
      <view class="ui-row" style="height:60px;">
        <view class="ui-col ui-col-align-center align-center valign-middle" style="flex:0 0 80px;">
          <view class="ui-col-content align-center valign-middle">
            <view class="left_icon">
              <images src="{{item.pic}}">
              </images>
            </view>
          </view>
        </view>
        <view class="text ui-col ui-col-align-left align-left valign-middle" style="padding-left: 10px; padding-right: 10px;">
          <view class="ui-col-content align-left valign-middle">
            <view style="width: 100%;">
              <view class="ui-row" style="height:30px;">
                <view class="ui-col ui-col-align-left align-left valign-middle" style="">
                  <view class="ui-col-content align-left valign-middle">
                    <view>
                      <text style="color:#115a98;font-size:16px">{{item.presentName}}</text>
                    </view>
                    <view style="color:#777">
                      <text style="color:orange">{{item.value}} </text> 积分</view>
                  </view>
                </view>
                <view class="ui-col ui-col-align-right align-right valign-bottom" style="padding-right: 10px;flex:0 0 80px;">
                  <view class="ui-col-content align-right valign-bottom">
                    剩余：{{item.leftNum}}
                  </view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>