<view>
  <ui-nav-bar slot="nav-bar" custom-style="{{ {backgroundColor:'rgba(255,255,255,0)',color:'#fff'} }}" _pid="{{_pid}}">
    <view class="ui-row" style="height:46px;">
      <view bindtap="back" class="ui-col ui-col-align-left align-left valign-middle" style="padding-left: 10px;flex:0 0 50px;">
        <view class="ui-col-content align-left valign-middle">
          <span type="arrow-left" class="ui-icon icon-arrow-left" style="font-size: 16px;"></span>
        </view>
      </view>
      <view class="ui-col ui-col-align-center align-center valign-middle" style="">
        <view class="ui-col-content align-center valign-middle">
          <view class="title">修改密码</view>
        </view>
      </view>
      <view class="ui-col ui-col-align-center align-center valign-middle" style="flex:0 0 50px;">
        <view class="ui-col-content align-center valign-middle">
        </view>
      </view>
    </view>
  </ui-nav-bar>

  <view class="content_wrap">
    <view class="head">
      <ui-blur height="200" url="{{ url }}" _pid="{{_pid}}">
        <view class="top_content">
          <view>
            <image src="{{ url }}" mode="aspectFill" style="width:60px;height:60px" />
          </view>
          <view class="name">
            {{name}}
          </view>
        </view>
      </ui-blur>
    </view>
    <view class="content_list">
      <view>
        <input placeholder="请输入登陆密码" bindinput="bindPwInput"></input>
      </view>
      <view>
        <input placeholder="请输入新密码" bindinput="bindNewpwInput"></input>
      </view>
      <view>
        <input placeholder="请确认新密码" bindinput="bindRepwInput"></input>
      </view>
      <view style="margin-top:15%">
        <button type="primary" bindtap="updatePassword">保存 </button>
      </view>
    </view>
  </view>
</view>