<view>
  <view class="content_wrap">
    <view class="head">
      <ui-blur height="200" url="{{ url }}" _pid="{{_pid}}">
        <view class="top_content">
          <view>
            <image src="{{ url }}" mode="aspectFill" style="width:60px;height:60px" />
          </view>
          <view class="name">
            {{name}}
          </view>
        </view>
      </ui-blur>
    </view>
    <view class="content_list">
      <view>
        <input placeholder="请输入登陆密码" bindinput="bindPwInput"></input>
      </view>
      <view>
        <input placeholder="请输入新密码" bindinput="bindNewpwInput"></input>
      </view>
      <view>
        <input placeholder="请确认新密码" bindinput="bindRepwInput"></input>
      </view>
      <view style="margin-top:15%">
        <button type="primary" bindtap="updatePassword">保存 </button>
      </view>
    </view>
  </view>
</view>