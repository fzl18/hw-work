.content_wrap .head {
  background: #333;
}
.content_wrap .top_content {
  width: 100%;
  position: absolute;
  bottom: 20px;
}
.content_wrap .top_content view {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 14px;
}
.content_wrap .top_content view image {
  border-radius: 50%;
  border: 2px solid #fff;
}
.content_wrap .top_content view .ui-icon {
  margin-left: 10px;
}
.content_wrap .top_content view.name {
  padding: 20px 0;
}
.content_wrap .top_content view .ui-view {
  display: inline-block;
  padding: 5px;
  border-radius: 25px;
  border: 1px solid #fff;
}
.content_wrap .top_content view.card .ui-view {
  font-size: 14px;
}
.content_wrap .content_list {
  padding: 5%;
}
.content_wrap .content_list .tit {
  margin: 5% 0 2% 0;
  border-left: 3px solid #1986E1;
  padding-left: 10px;
}
.content_wrap .content_list input {
  padding: 8px 0;
  margin: 10rpx 0;
  position: relative;
}
.content_wrap .content_list input:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 300%;
  height: 300%;
  border: 0 #1986E1 solid;
  box-sizing: border-box;
  transform-origin: 0 0;
  transform: scale(0.33333333);
  pointer-events: none;
  z-index: 0;
  border-bottom-width: 1px;
}
