<view>
  <view class="content_wrap">
    <view class="head">
      <ui-blur height="200" url="{{ url }}" _pid="{{_pid}}">
        <view class="top_content">
          <view>
            <image src="{{ url }}" mode="aspectFill" style="width:60px;height:60px" />
          </view>
          <view class="name">
            {{name}}
          </view>
        </view>
      </ui-blur>
    </view>
    <view class="content_list">
      <view class="tit"> 公司地址 (必填)</view>
      <view>
        <input value="{{addr}}" placeholder="请编辑" bindinput="bindinput" data-key="addr"></input>
      </view>
      <view class="tit"> 联系电话 (必填)</view>
      <view>
        <input value="{{tel}}" placeholder="请编辑" bindinput="bindinput" data-key="tel"></input>
      </view>
      <view class="tit"> 联系人 (必填)</view>
      <view>
        <input value="{{man}}" placeholder="请编辑" bindinput="bindinput" data-key="man"></input>
      </view>
      <view class="tit"> 职务 (必填)</view>
      <view>
        <input value="{{position}}" placeholder="请编辑" bindinput="bindinput" data-key="job"></input>
      </view>
      <view style="margin-top:5%">
        <button type="primary" bindtap="save">保存 </button>
      </view>
    </view>
  </view>
</view>